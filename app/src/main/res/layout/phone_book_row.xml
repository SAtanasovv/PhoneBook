<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android ="http://schemas.android.com/apk/res/android"
        xmlns:app     ="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
        name ="user"
        type ="com.satanasov.phonebook.model.ContactModel" />
    </data>

    <LinearLayout
        android:id              ="@+id/parentConstraintLayout"
        android:layout_width    ="match_parent"
        android:layout_height   ="wrap_content"
        android:layout_margin   ="4dp"
        android:orientation     ="vertical">

     <LinearLayout
         android:id               ="@+id/main_contact_info"
         android:layout_width     ="match_parent"
         android:layout_height    ="wrap_content"
         android:background       ="@color/colorWhite"
         android:elevation        ="10dp"
         android:orientation      ="horizontal">

         <androidx.cardview.widget.CardView
             android:id                   ="@+id/card_view_phone_book_row"
             android:layout_width         ="45dp"
             android:layout_height        ="45dp"
             android:innerRadius          ="0dp"
             android:elevation            ="10dp"
             android:shape                ="ring"
             android:layout_marginStart   ="16dp"
             android:layout_marginTop     ="8dp"
             android:layout_marginBottom  ="8dp"
             app:cardCornerRadius         ="22.5dp"
             android:gravity              ="start">

             <ImageView
                 android:id                      ="@+id/image_view_phone_book_row_id"
                 android:layout_width            ="45dp"
                 android:layout_height           ="45dp"
                 android:layout_alignParentTop   ="true"
                 android:layout_centerHorizontal ="true" />

         </androidx.cardview.widget.CardView>

         <TextView
              android:id                  ="@+id/first_name_text_view_phone_book_row_id"
              android:layout_height       ="wrap_content"
              android:layout_width        ="0dp"
              android:layout_marginTop    ="16dp"
              android:layout_marginLeft   ="16dp"
              android:layout_marginRight  ="16dp"
              android:text                ='@{user.firstName}'
              android:layout_weight       ="1"/>

         <ImageButton
              android:id                  ="@+id/contact_settings_button_phone_book_row_id"
              android:layout_width        ="35dp"
              android:layout_height       ="35dp"
              android:layout_marginTop    ="14dp"
              android:layout_marginEnd    ="16dp"
              android:background          ="?attr/selectableItemBackgroundBorderless"
              android:gravity             ="end"
              app:srcCompat               ="@drawable/ic_down_arrow" />

     </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id                              ="@+id/hidden_layout"
            android:layout_width                    ="match_parent"
            android:layout_height                   ="wrap_content"
            android:visibility                      ="gone"
            app:layout_constraintTop_toBottomOf     ="@id/contact_settings_button_phone_book_row_id"
            app:layout_constraintStart_toStartOf    ="parent"
            app:layout_constraintEnd_toEndOf        ="parent"
            app:layout_constraintBottom_toBottomOf  ="parent">

            <View
                android:id                              ="@+id/separator"
                android:layout_width                    ="match_parent"
                android:layout_height                   ="1dp"
                android:background                      ="@color/colorPrimaryDark"
                app:layout_constraintTop_toTopOf        ="parent"
                app:layout_constraintStart_toStartOf    ="parent"/>
            <TextView
                android:layout_width                 ="wrap_content"
                android:layout_height                ="wrap_content"
                android:text                         ="@string/phone_numbers"
                android:layout_marginTop             ="32dp"
                android:layout_marginStart           ="16dp"
                android:textSize                     ="16sp"
                app:layout_constraintTop_toBottomOf  ="@id/separator"
                app:layout_constraintStart_toStartOf ="parent"
                app:layout_constraintBottom_toTopOf  ="@id/expandable_area_phone_numbers"/>

            <LinearLayout
                android:id                           ="@+id/expandable_area_phone_numbers"
                android:layout_width                 ="match_parent"
                android:layout_height                ="wrap_content"
                android:orientation                  ="vertical"
                android:layout_marginTop             ="32dp"
                app:layout_constraintTop_toTopOf     ="parent"
                app:layout_constraintStart_toStartOf ="parent"
                app:layout_constraintEnd_toEndOf     ="parent">
            </LinearLayout>

            <Button
                android:id                             ="@+id/view_contact"
                android:layout_width                   ="wrap_content"
                android:layout_height                  ="wrap_content"
                android:text                           ="@string/view_contact"
                android:layout_marginTop               ="8dp"
                android:layout_marginEnd               ="8dp"
                app:layout_constraintEnd_toStartOf     ="@id/edit_contact"
                app:layout_constraintBottom_toBottomOf ="parent">
            </Button>

            <Button
                android:id                              ="@+id/edit_contact"
                android:layout_width                    ="wrap_content"
                android:layout_height                   ="wrap_content"
                android:text                            ="@string/edit_contact"
                android:layout_marginTop                ="8dp"
                android:layout_marginEnd                ="8dp"
                app:layout_constraintTop_toBottomOf     ="@id/expandable_area_phone_numbers"
                app:layout_constraintBottom_toBottomOf  ="parent"
                app:layout_constraintEnd_toEndOf        ="parent">
            </Button>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
</layout>