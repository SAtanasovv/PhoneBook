<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android ="http://schemas.android.com/apk/res/android"
        xmlns:app     ="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
        name ="user"
        type ="com.satanasov.phonebook.model.ContactModel" />
    </data>

    <LinearLayout
        android:id              ="@+id/parentConstraintLayout"
        android:layout_width    ="match_parent"
        android:layout_height   ="wrap_content"
        android:layout_margin   ="4dp"
        android:orientation     ="vertical">

     <LinearLayout
         android:id               ="@+id/main_contact_info"
         android:layout_width     ="match_parent"
         android:layout_height    ="wrap_content"
         android:background       ="@color/colorWhite"
         android:elevation        ="10dp"
         android:orientation      ="horizontal">

         <RelativeLayout
             android:id                  ="@+id/image_border"
             android:layout_width        ="49dp"
             android:layout_height       ="49dp"
             android:elevation           ="10dp"
             android:layout_marginStart  ="4dp"
             android:layout_marginTop    ="2dp"
             android:layout_marginBottom ="2dp">
         <androidx.cardview.widget.CardView
             android:id                         ="@+id/card_view_phone_book_row"
             android:layout_width               ="45dp"
             android:layout_height              ="45dp"
             android:innerRadius                ="0dp"
             android:shape                      ="ring"
             app:cardCornerRadius               ="22.5dp"
             android:gravity                    ="start"
             android:layout_centerVertical      ="true"
             android:layout_centerHorizontal    ="true">

             <ImageView
                 android:id                      ="@+id/image_view_phone_book_row_id"
                 android:layout_width            ="match_parent"
                 android:layout_height           ="match_parent"
                 android:layout_alignParentTop   ="true"
                 android:layout_centerHorizontal ="true" />

         </androidx.cardview.widget.CardView>
         </RelativeLayout>

         <TextView
              android:id                  ="@+id/first_name_text_view_phone_book_row_id"
              android:layout_height       ="wrap_content"
              android:layout_width        ="0dp"
              android:layout_marginTop    ="16dp"
              android:layout_marginLeft   ="16dp"
              android:layout_marginRight  ="16dp"
              android:text                ='@{user.firstName}'
              android:layout_weight       ="1"/>

         <ImageButton
              android:id                  ="@+id/contact_settings_button_phone_book_row_id"
              android:layout_width        ="35dp"
              android:layout_height       ="35dp"
              android:layout_marginTop    ="14dp"
              android:layout_marginEnd    ="16dp"
              android:background          ="?attr/selectableItemBackgroundBorderless"
              android:gravity             ="end"
              app:srcCompat               ="@drawable/ic_down_arrow" />

     </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id                              ="@+id/hidden_layout"
            android:layout_width                    ="match_parent"
            android:layout_height                   ="wrap_content"
            android:visibility                      ="gone"
            app:layout_constraintTop_toBottomOf     ="@id/contact_settings_button_phone_book_row_id"
            app:layout_constraintStart_toStartOf    ="parent"
            app:layout_constraintEnd_toEndOf        ="parent"
            app:layout_constraintBottom_toBottomOf  ="parent">

            <View
                android:id                              ="@+id/first_separator"
                android:layout_width                    ="match_parent"
                android:layout_height                   ="1dp"
                android:background                      ="@color/colorPrimaryDark"
                app:layout_constraintTop_toTopOf        ="parent"
                app:layout_constraintStart_toStartOf    ="parent"/>
            <TextView
                android:layout_width                 ="wrap_content"
                android:layout_height                ="wrap_content"
                android:text                         ="@string/phone_numbers"
                android:layout_marginTop             ="32dp"
                android:layout_marginStart           ="16dp"
                android:textSize                     ="16sp"
                app:layout_constraintTop_toBottomOf  ="@id/first_separator"
                app:layout_constraintStart_toStartOf ="parent"
                app:layout_constraintBottom_toTopOf  ="@id/expandable_area_phone_numbers"/>

            <LinearLayout
                android:id                           ="@+id/expandable_area_phone_numbers"
                android:layout_width                 ="match_parent"
                android:layout_height                ="wrap_content"
                android:orientation                  ="vertical"
                android:layout_marginTop             ="32dp"
                app:layout_constraintTop_toTopOf     ="parent"
                app:layout_constraintStart_toStartOf ="parent"
                app:layout_constraintEnd_toEndOf     ="parent">
            </LinearLayout>

            <View
                android:id                              ="@+id/second_separator"
                android:layout_width                    ="match_parent"
                android:layout_height                   ="1dp"
                android:background                      ="@color/colorPrimaryDark"
                android:layout_marginTop                ="8dp"
                app:layout_constraintTop_toBottomOf     ="@id/expandable_area_phone_numbers"
                app:layout_constraintStart_toStartOf    ="parent"/>

            <TextView
                android:id                           ="@+id/email_label"
                android:layout_width                 ="wrap_content"
                android:layout_height                ="wrap_content"
                android:text                         ="@string/email"
                android:layout_marginTop             ="32dp"
                android:layout_marginStart           ="16dp"
                android:textSize                     ="16sp"
                app:layout_constraintTop_toBottomOf  ="@id/second_separator"
                app:layout_constraintStart_toStartOf ="parent" />

            <LinearLayout
                android:id                           ="@+id/expandable_area_emails"
                android:layout_width                 ="match_parent"
                android:layout_height                ="wrap_content"
                android:orientation                  ="vertical"
                app:layout_constraintTop_toBottomOf  ="@id/email_label"
                app:layout_constraintStart_toStartOf ="parent"
                app:layout_constraintEnd_toEndOf     ="parent">
            </LinearLayout>

            <View
                android:layout_width                    ="match_parent"
                android:layout_height                   ="1dp"
                android:background                      ="@color/colorPrimaryDark"
                android:layout_marginTop                ="8dp"
                app:layout_constraintTop_toBottomOf     ="@id/expandable_area_emails"
                app:layout_constraintStart_toStartOf    ="parent"/>

            <Button
                android:id                             ="@+id/delete_contact"
                android:layout_width                   ="wrap_content"
                android:layout_height                  ="wrap_content"
                android:text                           ="@string/delete_contact"
                android:layout_marginTop               ="8dp"
                android:layout_marginEnd               ="8dp"
                app:layout_constraintEnd_toStartOf     ="@id/edit_contact"
                app:layout_constraintBottom_toBottomOf ="parent">
            </Button>

            <Button
                android:id                              ="@+id/edit_contact"
                android:layout_width                    ="wrap_content"
                android:layout_height                   ="wrap_content"
                android:text                            ="@string/edit_contact"
                android:layout_marginTop                ="8dp"
                android:layout_marginEnd                ="8dp"
                app:layout_constraintTop_toBottomOf     ="@id/expandable_area_emails"
                app:layout_constraintBottom_toBottomOf  ="parent"
                app:layout_constraintEnd_toEndOf        ="parent">
            </Button>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
</layout>