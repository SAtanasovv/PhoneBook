<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android  ="http://schemas.android.com/apk/res/android"
        xmlns:app      ="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
        name ="user"
        type ="com.satanasov.phonebook.model.ContactModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout

    android:id             ="@+id/parentConstraintLayout"
    android:layout_width   ="match_parent"
    android:layout_height  ="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id                           ="@+id/contact_details_constraint_layout"
        android:layout_width                 ="match_parent"
        android:layout_height                ="wrap_content"
        android:layout_margin                ="8dp"
        android:background                   ="@color/colorWhite"
        android:elevation                    ="10dp"
        app:layout_constraintTop_toTopOf     ="parent"
        app:layout_constraintStart_toStartOf ="parent"
        app:layout_constraintEnd_toEndOf     ="parent">

    <TextView
        android:id                          ="@+id/first_name_text_view_phone_book_row_id"
        android:layout_height               ="wrap_content"
        android:layout_width                ="0dp"
        android:layout_marginTop            ="16dp"
        android:layout_marginLeft           ="16dp"
        android:layout_marginRight          ="16dp"
        android:text                        ='@{user.firstName}'
        app:layout_constraintEnd_toStartOf  ="@id/contact_settings_button_phone_book_row_id"
        app:layout_constraintStart_toEndOf  ="@id/image_view_phone_book_row_id"
        app:layout_constraintTop_toTopOf    ="parent" />

        <android.support.v7.widget.CardView>

    <ImageView
        android:id                             ="@+id/image_view_phone_book_row_id"
        android:layout_width                   ="45dp"
        android:layout_height                  ="45dp"
        android:layout_marginLeft              ="16dp"
        android:layout_marginStart             ="16dp"
        app:layout_constraintBottom_toBottomOf ="parent"
        app:layout_constraintStart_toStartOf   ="parent"
        app:layout_constraintTop_toTopOf       ="parent" />
    </android.support.v7.widget.CardView>
    <TextView
        android:id                             ="@+id/last_name_text_view_phone_book_row_id"
        android:layout_width                   ="0dp"
        android:layout_height                  ="wrap_content"
        android:layout_marginBottom            ="8dp"
        android:layout_marginTop               ="8dp"
        android:layout_marginLeft              ="16dp"
        android:layout_marginRight             ="16dp"
        android:text                           ='@{user.lastName}'
        app:layout_constraintWidth_default     ="spread"
        app:layout_constraintStart_toEndOf     ="@id/image_view_phone_book_row_id"
        app:layout_constraintTop_toBottomOf    ="@+id/first_name_text_view_phone_book_row_id"
        app:layout_constraintEnd_toStartOf     ="@id/contact_settings_button_phone_book_row_id"
        app:layout_constraintBottom_toBottomOf ="parent"/>

    <ImageButton
        android:id                             ="@+id/contact_settings_button_phone_book_row_id"
        android:layout_width                   ="35dp"
        android:layout_height                  ="35dp"
        android:layout_marginEnd               ="16dp"
        android:background                     ="?attr/selectableItemBackgroundBorderless"
        app:layout_constraintBottom_toBottomOf ="parent"
        app:layout_constraintEnd_toEndOf       ="parent"
        app:layout_constraintTop_toTopOf       ="parent"
        app:srcCompat                          ="@drawable/ic_down_arrow" />


    </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id                              ="@+id/hidden_layout"
            android:layout_width                    ="match_parent"
            android:layout_height                   ="wrap_content"
            android:visibility                      ="gone"
            app:layout_constraintTop_toBottomOf     ="@id/contact_details_constraint_layout"
            app:layout_constraintStart_toStartOf    ="parent"
            app:layout_constraintEnd_toEndOf        ="parent">

            <LinearLayout
               android:id                              ="@+id/expandable_area"
               android:layout_width                    ="fill_parent"
               android:layout_height                   ="wrap_content"
               android:orientation                     ="vertical"
               app:layout_constraintTop_toTopOf        ="parent"
               app:layout_constraintStart_toStartOf    ="parent"
               app:layout_constraintEnd_toEndOf        ="parent">
            </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width                    ="match_parent"
            android:layout_height                   ="wrap_content"
            android:layout_gravity                  ="bottom"
            android:layout_marginTop                ="16dp"
            app:layout_constraintTop_toBottomOf     ="@id/expandable_area"
            app:layout_constraintStart_toStartOf    ="parent"
            app:layout_constraintEnd_toEndOf        ="parent">

            <Button
                android:id                             ="@+id/view_contact"
                android:layout_width                   ="wrap_content"
                android:layout_height                  ="wrap_content"
                android:text                           ="@string/view_contact"
                app:layout_constraintStart_toStartOf   ="parent"
                app:layout_constraintEnd_toStartOf     ="@id/edit_contact"
                app:layout_constraintBottom_toBottomOf ="parent">
            </Button>

            <Button
                android:id                              ="@+id/edit_contact"
                android:layout_width                    ="wrap_content"
                android:layout_height                   ="wrap_content"
                android:text                            ="@string/edit_contact"
                app:layout_constraintStart_toEndOf      ="@id/view_contact"
                app:layout_constraintBottom_toBottomOf  ="parent"
                app:layout_constraintEnd_toEndOf        ="parent">
            </Button>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>