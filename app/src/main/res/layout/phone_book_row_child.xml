<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name  ="user"
            type  ="com.satanasov.phonebook.model.ContactModel" />
    </data>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/child_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id                             ="@+id/type_field_text_view"
        android:layout_height                  ="wrap_content"
        android:layout_width                   ="60dp"
        android:layout_marginTop               ="16dp"
        android:layout_marginBottom            ="16dp"
        android:layout_marginLeft              ="16dp"
        app:layout_constraintEnd_toStartOf     ="@id/text_field_text_view"
        app:layout_constraintBottom_toBottomOf ="parent"
        app:layout_constraintTop_toTopOf       ="parent"
        app:layout_constraintStart_toStartOf   ="parent" />

    <TextView
        android:id                             ="@+id/text_field_text_view"
        android:layout_height                  ="wrap_content"
        android:layout_width                   ="0dp"
        android:layout_marginTop               ="16dp"
        android:layout_marginLeft              ="16dp"
        android:layout_marginRight             ="16dp"
        android:layout_marginBottom            ="16dp"
        app:layout_constraintBottom_toBottomOf ="parent"
        app:layout_constraintStart_toEndOf     ="@id/type_field_text_view"
        app:layout_constraintEnd_toEndOf       ="parent"
        app:layout_constraintTop_toTopOf       ="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>