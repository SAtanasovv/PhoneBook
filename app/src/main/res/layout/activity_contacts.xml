<?xml version="1.0" encoding="utf-8"?>


<layout xmlns:android  ="http://schemas.android.com/apk/res/android"
    xmlns:app          ="http://schemas.android.com/apk/res-auto"
    xmlns:tools        ="http://schemas.android.com/tools">

    <data>
        <variable
            name  ="user"
            type  ="com.satanasov.phonebook.model.UserModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width    ="match_parent"
        android:layout_height   ="match_parent"
        android:layout_gravity  ="center"
        tools:context           =".view.ContactsActivity">

        <include
            android:id                            ="@+id/contacts_toolbar"
            layout                                ="@layout/toolbar_main"
            android:layout_width                  ="match_parent"
            android:layout_height                 ="wrap_content"
            app:layout_constraintTop_toTopOf      ="parent"
            app:layout_constraintStart_toStartOf  ="parent" />

        <ImageView
            android:id                              ="@+id/contact_image_view"
            android:layout_width                    ="150dp"
            android:layout_height                   ="80dp"
            android:layout_marginTop                ="8dp"
            app:layout_constraintBottom_toTopOf     ="@id/center_constrain_layout"
            app:layout_constraintEnd_toEndOf        ="parent"
            app:layout_constraintStart_toStartOf    ="parent"
            app:layout_constraintTop_toBottomOf     ="@id/contacts_toolbar" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id                              ="@+id/center_constrain_layout"
            android:layout_width                    ="match_parent"
            android:layout_height                   ="wrap_content"
            app:layout_constraintTop_toBottomOf     ="@id/contacts_toolbar"
            app:layout_constraintBottom_toBottomOf  ="parent"
            android:layout_marginTop                ="8dp"
            tools:context                           =".view.ContactsActivity">

            <com.google.android.material.textfield.TextInputLayout
                android:id                              ="@+id/input_layout_first_name_contacts_id"
                android:layout_width                    ="match_parent"
                android:layout_height                   ="wrap_content"
                android:layout_marginLeft               ="16dp"
                android:layout_marginRight              ="16dp"
                android:hint                            ="@string/enter_first_name"
                app:counterMaxLength                    ="5"
                app:errorEnabled                        ="true"
                app:layout_constraintStart_toStartOf    ="@+id/center_constrain_layout"
                app:layout_constraintEnd_toEndOf        ="@id/center_constrain_layout"
                app:layout_constraintTop_toTopOf        ="@+id/center_constrain_layout"
                style                                   ="@style/Rounded">

                <com.google.android.material.textfield.TextInputEditText
                    android:id              ="@+id/first_name_edit_text_contacts_id"
                    android:layout_width    ="match_parent"
                    android:layout_height   ="wrap_content"
                    android:text            ='@{user.firstName}'
                    android:inputType       ="textPersonName" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id                              ="@+id/input_layout_last_name_contacts_id"
                android:layout_width                    ="match_parent"
                android:layout_height                   ="wrap_content"
                android:layout_marginLeft               ="16dp"
                android:layout_marginRight              ="16dp"
                android:hint                            ="@string/enter_last_name"
                app:counterMaxLength                    ="5"
                app:errorEnabled                        ="true"
                app:layout_constraintEnd_toEndOf        ="@id/center_constrain_layout"
                app:layout_constraintStart_toStartOf    ="@id/center_constrain_layout"
                app:layout_constraintTop_toBottomOf     ="@id/input_layout_first_name_contacts_id"
                style                                   ="@style/Rounded">

                <com.google.android.material.textfield.TextInputEditText
                    android:id              ="@+id/last_name_edit_text_contacts_id"
                    android:layout_width    ="match_parent"
                    android:layout_height   ="wrap_content"
                    android:text            ='@{user.lastName}'
                    android:inputType       ="textPersonName" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id                              ="@+id/input_layout_mobile_number_contacts_id"
                android:layout_width                    ="match_parent"
                android:layout_height                   ="wrap_content"
                android:layout_marginLeft               ="16dp"
                android:layout_marginRight              ="16dp"
                android:hint                            ="@string/enter_phone_number"
                app:counterMaxLength                    ="12"
                app:errorEnabled                        ="true"
                app:layout_constraintEnd_toEndOf        ="@id/center_constrain_layout"
                app:layout_constraintStart_toStartOf    ="@id/center_constrain_layout"
                app:layout_constraintTop_toBottomOf     ="@id/input_layout_last_name_contacts_id"
                style                                   ="@style/RoundedDropDown">

                <com.google.android.material.textfield.MaterialAutoCompleteTextView
                    android:id              ="@+id/mobile_number_edit_text_contacts_id"
                    android:layout_width    ="match_parent"
                    android:layout_height   ="wrap_content"
                    android:inputType       ="phone" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
            android:id                              ="@+id/input_layout_home_number_contacts_id"
            android:layout_width                    ="match_parent"
            android:layout_height                   ="wrap_content"
            android:layout_marginLeft               ="16dp"
            android:layout_marginRight              ="16dp"
            android:hint                            ="@string/enter_home_number"
            app:counterMaxLength                    ="12"
            app:errorEnabled                        ="true"
            app:layout_constraintEnd_toEndOf        ="@id/center_constrain_layout"
            app:layout_constraintStart_toStartOf    ="@id/center_constrain_layout"
            app:layout_constraintTop_toBottomOf     ="@id/input_layout_mobile_number_contacts_id"
            style                                   ="@style/RoundedDropDown">

            <com.google.android.material.textfield.MaterialAutoCompleteTextView
                android:id              ="@+id/home_number_edit_text_contacts_id"
                android:layout_width    ="match_parent"
                android:layout_height   ="wrap_content"
                android:inputType       ="phone" />
        </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id                              ="@+id/input_layout_work_number_contacts_id"
                android:layout_width                    ="match_parent"
                android:layout_height                   ="wrap_content"
                android:layout_marginLeft               ="16dp"
                android:layout_marginRight              ="16dp"
                android:hint                            ="@string/enter_work_number"
                app:counterMaxLength                    ="12"
                app:errorEnabled                        ="true"
                app:layout_constraintEnd_toEndOf        ="@id/center_constrain_layout"
                app:layout_constraintStart_toStartOf    ="@id/center_constrain_layout"
                app:layout_constraintTop_toBottomOf     ="@id/input_layout_home_number_contacts_id"
                style                                   ="@style/RoundedDropDown">

                <com.google.android.material.textfield.MaterialAutoCompleteTextView
                    android:id              ="@+id/work_number_edit_text_contacts_id"
                    android:layout_width    ="match_parent"
                    android:layout_height   ="wrap_content"
                    android:inputType       ="phone" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id                              ="@+id/input_layout_main_number_contacts_id"
                android:layout_width                    ="match_parent"
                android:layout_height                   ="wrap_content"
                android:layout_marginLeft               ="16dp"
                android:layout_marginRight              ="16dp"
                android:hint                            ="@string/enter_main_number"
                app:counterMaxLength                    ="12"
                app:errorEnabled                        ="true"
                app:layout_constraintEnd_toEndOf        ="@id/center_constrain_layout"
                app:layout_constraintStart_toStartOf    ="@id/center_constrain_layout"
                app:layout_constraintTop_toBottomOf     ="@id/input_layout_work_number_contacts_id"
                style                                   ="@style/RoundedDropDown">

                <com.google.android.material.textfield.MaterialAutoCompleteTextView
                    android:id              ="@+id/main_number_edit_text_contacts_id"
                    android:layout_width    ="match_parent"
                    android:layout_height   ="wrap_content"
                    android:inputType       ="phone" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id                              ="@+id/input_layout_email_contacts_id"
                android:layout_width                    ="match_parent"
                android:layout_height                   ="wrap_content"
                android:layout_marginLeft               ="16dp"
                android:layout_marginRight              ="16dp"
                android:hint                            ="@string/enter_email"
                app:counterMaxLength                    ="32"
                app:errorEnabled                        ="true"
                app:layout_constraintEnd_toEndOf        ="@id/center_constrain_layout"
                app:layout_constraintStart_toStartOf    ="@id/center_constrain_layout"
                app:layout_constraintTop_toBottomOf     ="@+id/input_layout_main_number_contacts_id"
                style                                   ="@style/Rounded">

                <com.google.android.material.textfield.TextInputEditText
                    android:id              ="@+id/email_edit_text_contacts_id"
                    android:layout_width    ="match_parent"
                    android:layout_height   ="wrap_content"
                    android:text            ='@{user.email}'
                    android:inputType       ="textPersonName" />
            </com.google.android.material.textfield.TextInputLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
        <Button
            android:id                                  ="@+id/cancel_button_contacts_id"
            android:layout_width                        ="0dp"
            android:layout_height                       ="wrap_content"
            android:layout_marginLeft                   ="16dp"
            android:layout_marginRight                  ="16dp"
            android:layout_marginTop                    ="16dp"
            android:text                                ="@string/cancel"
            android:layout_marginBottom                 ="8dp"
            app:layout_constraintBottom_toBottomOf      ="parent"
            app:layout_constraintStart_toStartOf        ="parent"
            app:layout_constraintEnd_toStartOf          ="@id/save_button_contacts_id"
            app:layout_constraintWidth_default          ="spread" />

        <Button
            android:id                              ="@+id/save_button_contacts_id"
            android:layout_width                    ="0dp"
            android:layout_height                   ="wrap_content"
            android:layout_marginLeft               ="16dp"
            android:layout_marginTop                ="16dp"
            android:layout_marginRight              ="16dp"
            android:text                            ="@string/save"
            android:layout_marginBottom             ="8dp"
            app:layout_constraintStart_toEndOf      ="@id/cancel_button_contacts_id"
            app:layout_constraintBottom_toBottomOf  ="parent"
            app:layout_constraintEnd_toEndOf        ="parent"
            app:layout_constraintWidth_default      ="spread" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
