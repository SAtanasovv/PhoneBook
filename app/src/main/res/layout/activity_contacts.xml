<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app                                         ="http://schemas.android.com/apk/res-auto"
    xmlns:tools                                       ="http://schemas.android.com/tools"
    android:layout_width                              ="match_parent"
    android:layout_height                             ="match_parent"
    tools:context                                     =".View.ContactsActivity">

    <EditText
        android:id                                    ="@+id/first_name_edit_text_contacts_id"
        android:layout_width                          ="wrap_content"
        android:layout_height                         ="wrap_content"
        android:ems                                   ="10"
        android:hint                                  ="@string/enter_first_name"
        android:inputType                             ="textPersonName"
        android:layout_marginTop                      ="80dp"
        android:paddingBottom                         ="16dp"
        app:layout_constraintBottom_toTopOf           ="@+id/last_name_edit_text_contacts_id"
        app:layout_constraintEnd_toEndOf              ="parent"
        app:layout_constraintStart_toStartOf          ="parent"
        app:layout_constraintTop_toTopOf              ="parent" />

    <EditText
        android:id                                    ="@+id/last_name_edit_text_contacts_id"
        android:layout_width                          ="wrap_content"
        android:layout_height                         ="wrap_content"
        android:ems                                   ="10"
        android:hint                                  ="@string/enter_last_name"
        android:inputType                             ="textPersonName"
        android:paddingTop                            ="16dp"
        android:paddingBottom                         ="16dp"
        android:layout_marginTop                      ="16dp"
        app:layout_constraintEnd_toEndOf              ="parent"
        app:layout_constraintStart_toStartOf          ="parent"
        app:layout_constraintTop_toBottomOf           ="@id/first_name_edit_text_contacts_id" />

    <EditText
        android:id                                    ="@+id/phone_number_edit_text_contacts_id"
        android:layout_width                          ="wrap_content"
        android:layout_height                         ="wrap_content"
        android:ems                                   ="10"
        android:hint                                  ="@string/enter_phone_number"
        android:inputType                             ="phone"
        android:paddingTop                            ="16dp"
        android:paddingBottom                         ="16dp"
        android:layout_marginTop                      ="16dp"
        app:layout_constraintEnd_toEndOf              ="parent"
        app:layout_constraintStart_toStartOf          ="parent"
        app:layout_constraintTop_toBottomOf           ="@id/last_name_edit_text_contacts_id" />

    <EditText
        android:id                                    ="@+id/email_edit_text_contacts_id"
        android:layout_width                          ="wrap_content"
        android:layout_height                         ="wrap_content"
        android:layout_marginBottom                   ="30dp"
        android:ems                                   ="10"
        android:paddingTop                            ="16dp"
        android:paddingBottom                         ="16dp"
        android:layout_marginTop                      ="16dp"
        android:hint                                  ="@string/enter_email"
        android:inputType                             ="textPersonName"
        app:layout_constraintEnd_toEndOf              ="parent"
        app:layout_constraintStart_toStartOf          ="parent"
        app:layout_constraintTop_toBottomOf           ="@id/phone_number_edit_text_contacts_id"
        tools:ignore                                  ="TextFields" />

    <Button
        android:id                                    ="@+id/cancel_button_contacts_id"
        android:layout_width                          ="wrap_content"
        android:layout_height                         ="wrap_content"
        android:text                                  ="@string/cancel"
        app:layout_constraintBaseline_toBaselineOf    ="@+id/save_button_contacts_id"
        app:layout_constraintBottom_toBottomOf        ="parent"
        app:layout_constraintStart_toStartOf          ="parent"
        app:layout_constraintTop_toTopOf              ="parent"
        app:layout_constraintEnd_toStartOf            ="@+id/save_button_contacts_id" />

    <Button
        android:id                                    ="@+id/save_button_contacts_id"
        android:layout_width                          ="wrap_content"
        android:layout_height                         ="wrap_content"
        android:text                                  ="@string/save"
        app:layout_constraintBottom_toBottomOf        ="parent"
        app:layout_constraintEnd_toEndOf              ="parent"
        app:layout_constraintStart_toEndOf            ="@+id/cancel_button_contacts_id"
        app:layout_constraintTop_toBottomOf           ="@+id/email_edit_text_contacts_id"/>

</androidx.constraintlayout.widget.ConstraintLayout>