<?xml version="1.0" encoding="utf-8"?>


<layout xmlns:android  ="http://schemas.android.com/apk/res/android"
    xmlns:app          ="http://schemas.android.com/apk/res-auto"
    xmlns:tools        ="http://schemas.android.com/tools">

    <data>
        <variable
            name  ="user"
            type  ="com.satanasov.phonebook.model.User" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width    ="match_parent"
        android:layout_height   ="match_parent"
        android:layout_gravity  ="center"
        tools:context           =".view.ContactsActivity">

        <include
            android:id                            ="@+id/contacts_toolbar"
            layout                                ="@layout/toolbar_main"
            android:layout_width                  ="match_parent"
            android:layout_height                 ="wrap_content"
            app:layout_constraintTop_toTopOf      ="parent"
            app:layout_constraintStart_toStartOf  ="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id                              ="@+id/center_constrain_layout"
            android:layout_width                    ="match_parent"
            android:layout_height                   ="wrap_content"
            android:layout_gravity                  ="center"
            app:layout_constraintTop_toBottomOf     ="@id/contacts_toolbar"
            app:layout_constraintBottom_toBottomOf  ="parent"
            tools:context                           =".view.ContactsActivity">

            <com.google.android.material.textfield.TextInputLayout
                android:id                              ="@+id/input_layout_first_name_contacts_id"
                android:layout_width                    ="match_parent"
                android:layout_height                   ="wrap_content"
                android:layout_marginLeft               ="16dp"
                android:layout_marginRight              ="16dp"
                android:layout_marginTop                ="8dp"
                android:hint                            ="@string/enter_first_name"
                app:counterEnabled                      ="true"
                app:counterMaxLength                    ="5"
                app:errorEnabled                        ="true"
                app:layout_constraintStart_toStartOf    ="@+id/center_constrain_layout"
                app:layout_constraintEnd_toEndOf        ="@id/center_constrain_layout"
                app:layout_constraintTop_toTopOf        ="@+id/center_constrain_layout"
                style                                   ="@style/Rounded">

                <com.google.android.material.textfield.TextInputEditText
                    android:id              ="@+id/first_name_edit_text_contacts_id"
                    android:layout_width    ="match_parent"
                    android:layout_height   ="wrap_content"
                    android:text            ='@{user.firstName}'
                    android:inputType       ="textPersonName" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id                              ="@+id/input_layout_last_name_contacts_id"
                android:layout_width                    ="match_parent"
                android:layout_height                   ="wrap_content"
                android:layout_marginLeft               ="16dp"
                android:layout_marginTop                ="16dp"
                android:layout_marginRight              ="16dp"
                android:hint                            ="@string/enter_last_name"
                app:counterEnabled                      ="true"
                app:counterMaxLength                    ="5"
                app:errorEnabled                        ="true"
                app:layout_constraintEnd_toEndOf        ="@id/center_constrain_layout"
                app:layout_constraintStart_toStartOf    ="@id/center_constrain_layout"
                app:layout_constraintTop_toBottomOf     ="@id/input_layout_first_name_contacts_id"
                style                                   ="@style/Rounded">

                <com.google.android.material.textfield.TextInputEditText
                    android:id              ="@+id/last_name_edit_text_contacts_id"
                    android:layout_width    ="match_parent"
                    android:layout_height   ="wrap_content"
                    android:text            ='@{user.lastName}'
                    android:inputType       ="textPersonName" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id                              ="@+id/input_layout_phone_number_contacts_id"
                android:layout_width                    ="match_parent"
                android:layout_height                   ="wrap_content"
                android:layout_marginLeft               ="16dp"
                android:layout_marginTop                ="16dp"
                android:layout_marginRight              ="16dp"
                android:hint                            ="@string/enter_phone_number"
                app:counterEnabled                      ="true"
                app:counterMaxLength                    ="12"
                app:errorEnabled                        ="true"
                app:layout_constraintEnd_toEndOf        ="@id/center_constrain_layout"
                app:layout_constraintStart_toStartOf    ="@id/center_constrain_layout"
                app:layout_constraintTop_toBottomOf     ="@id/input_layout_last_name_contacts_id"
                style                                   ="@style/Rounded">

                <com.google.android.material.textfield.TextInputEditText
                    android:id              ="@+id/phone_number_edit_text_contacts_id"
                    android:layout_width    ="match_parent"
                    android:layout_height   ="wrap_content"
                    android:text            ='@{user.phoneNumber}'
                    android:inputType       ="phone" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id                              ="@+id/input_layout_email_contacts_id"
                android:layout_width                    ="match_parent"
                android:layout_height                   ="wrap_content"
                android:layout_marginLeft               ="16dp"
                android:layout_marginTop                ="16dp"
                android:layout_marginRight              ="16dp"
                android:hint                            ="@string/enter_email"
                app:counterEnabled                      ="true"
                app:counterMaxLength                    ="32"
                app:errorEnabled                        ="true"
                app:layout_constraintEnd_toEndOf        ="@id/center_constrain_layout"
                app:layout_constraintStart_toStartOf    ="@id/center_constrain_layout"
                app:layout_constraintTop_toBottomOf     ="@id/input_layout_phone_number_contacts_id"
                style                                   ="@style/Rounded">

                <com.google.android.material.textfield.TextInputEditText
                    android:id              ="@+id/email_edit_text_contacts_id"
                    android:layout_width    ="match_parent"
                    android:layout_height   ="wrap_content"
                    android:text            ='@{user.email}'
                    android:inputType       ="textPersonName" />
            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id                                  ="@+id/cancel_button_contacts_id"
                android:layout_width                        ="0dp"
                android:layout_height                       ="wrap_content"
                android:layout_marginLeft                   ="16dp"
                android:layout_marginRight                  ="16dp"
                android:layout_marginTop                    ="16dp"
                android:text                                ="@string/cancel"
                app:layout_constraintBaseline_toBaselineOf  ="@+id/save_button_contacts_id"
                app:layout_constraintBottom_toBottomOf      ="parent"
                app:layout_constraintEnd_toStartOf          ="@+id/save_button_contacts_id"
                app:layout_constraintStart_toStartOf        ="parent"
                app:layout_constraintTop_toBottomOf         ="@id/input_layout_email_contacts_id"
                app:layout_constraintWidth_default          ="spread" />

            <Button
                android:id                              ="@+id/save_button_contacts_id"
                android:layout_width                    ="0dp"
                android:layout_height                   ="wrap_content"
                android:layout_marginLeft               ="16dp"
                android:layout_marginTop                ="16dp"
                android:layout_marginRight              ="16dp"
                android:text                            ="@string/save"
                app:layout_constraintBottom_toBottomOf  ="parent"
                app:layout_constraintEnd_toEndOf        ="parent"
                app:layout_constraintStart_toEndOf      ="@+id/cancel_button_contacts_id"
                app:layout_constraintTop_toBottomOf     ="@+id/input_layout_email_contacts_id"
                app:layout_constraintWidth_default      ="spread" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
